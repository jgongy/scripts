set editor=vim

set imap_user=[EMAIL]
set imap_pass=[PASSWORD]
set folder=imaps://imap.gmail.com/
set spoolfile=+INBOX

set record=+Sent
unset record

set realname="[NAME]"
set from=$imap_user
set use_from=yes

set smtp_pass=$imap_pass
set smtp_url=smtps://$imap_user@smtp.gmail.com
set ssl_force_tls=yes
set ssl_starttls=yes

